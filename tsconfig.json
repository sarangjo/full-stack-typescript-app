{
  "include": ["src"],
  "compileOnSave": false,
  "compilerOptions": {
    "noEmit": true,
    "sourceMap": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "es2016",
    "jsx": "react",
    "lib": ["dom", "es2016"],
    "baseUrl": "./src",
    "paths": {
      "@app/*": ["client/*"],
      "@common/*": ["common/*"],
      "@server/*": ["server/*"]
    }
  }
}
